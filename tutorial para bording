<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Tutorial Interativo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 20px;
    }

    .btn {
      padding: 10px 16px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin: 5px;
    }

    .btn:hover {
      background-color: #0056b3;
    }

    #menu, #botao-principal, #texto-info {
      margin: 20px 0;
    }

    #tutorial-overlay {
      position: fixed;
      top: 0; left: 0;
      width: 100vw; height: 100vh;
      background: rgba(0,0,0,0.6);
      z-index: 999;
      display: none;
    }

    .tutorial-box {
      position: absolute;
      background: white;
      padding: 15px;
      border-radius: 8px;
      max-width: 280px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.3);
      z-index: 1000;
    }

    .tutorial-box p {
      margin: 0 0 10px;
    }

    .highlight {
      position: relative;
      z-index: 1001 !important;
      box-shadow: 0 0 0 4px #ffc107;
      transition: all 0.3s ease;
    }
  </style>
</head>
<body>

  <h1>Bem-vindo ao Site</h1>
  <button onclick="restartTutorial()" class="btn">Reiniciar Tutorial</button>

  <nav id="menu">
    <button class="btn">Home</button>
    <button class="btn">Sobre</button>
    <button class="btn">Contato</button>
  </nav>

  <button id="botao-principal" class="btn">Clique Aqui</button>
  <p id="texto-info">Este é um parágrafo de informação importante.</p>

  <div id="tutorial-overlay"></div>

  <script>
    const steps = [
      {
        element: '#menu',
        text: 'Este é o menu principal. Use para navegar pelo site.'
      },
      {
        element: '#botao-principal',
        text: 'Este botão executa uma ação importante.'
      },
      {
        element: '#texto-info',
        text: 'Aqui você encontra informações úteis.'
      }
    ];

    let currentStep = 0;
    let tooltipBox = null;
    const overlay = document.getElementById('tutorial-overlay');

    function startTutorial() {
      overlay.style.display = 'block';
      currentStep = 0;
      showStep(currentStep);
    }

    function restartTutorial() {
      localStorage.removeItem('tutorialVisto');
      startTutorial();
    }

    function showStep(index) {
      const step = steps[index];
      const el = document.querySelector(step.element);

      if (!el) return;

      removeHighlight();
      el.classList.add('highlight');

      if (tooltipBox) tooltipBox.remove();

      tooltipBox = document.createElement('div');
      tooltipBox.className = 'tutorial-box';

      tooltipBox.innerHTML = `
        <p>${step.text}</p>
        <div style="text-align: right;">
          ${index > 0 ? '<button class="btn" onclick="prevStep()">Voltar</button>' : ''}
          ${index < steps.length - 1 ? '<button class="btn" onclick="nextStep()">Próximo</button>' : '<button class="btn" onclick="endTutorial()">Finalizar</button>'}
          <button class="btn" onclick="endTutorial()">Pular</button>
        </div>
      `;

      document.body.appendChild(tooltipBox);

      const rect = el.getBoundingClientRect();
      tooltipBox.style.top = `${rect.bottom + window.scrollY + 10}px`;
      tooltipBox.style.left = `${rect.left + window.scrollX}px`;
    }

    function removeHighlight() {
      document.querySelectorAll('.highlight').forEach(el => {
        el.classList.remove('highlight');
      });
    }

    function nextStep() {
      if (currentStep < steps.length - 1) {
        currentStep++;
        showStep(currentStep);
      }
    }

    function prevStep() {
      if (currentStep > 0) {
        currentStep--;
        showStep(currentStep);
      }
    }

    function endTutorial() {
      overlay.style.display = 'none';
      if (tooltipBox) tooltipBox.remove();
      removeHighlight();
      localStorage.setItem('tutorialVisto', 'true');
    }

    window.addEventListener('load', () => {
      if (!localStorage.getItem('tutorialVisto')) {
        setTimeout(startTutorial, 500);
      }
    });
  </script>

</body>
</html>
